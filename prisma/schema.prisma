    PHYSICIAN
    MEDICAL_ASSISTANT
    GUEST
}

enum Status {
    PENDING
    ACCEPT
    REJECT
    COMPLETE
}

enum Gender {
    MALE
    FEMALE
    UNDEFINED
}

enum BloodType {
    A
    B
    AB
    O
    UNDEFINED
}
