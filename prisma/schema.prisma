// Necessary for Next auth
model Account {
    id                String  @id @default(cuid())
    userId            String
    type              String
    provider          String
    providerAccountId String
    refresh_token     String? @db.Text
    access_token      String? @db.Text
    expires_at        Int?
    token_type        String?
    scope             String?
    id_token          String? @db.Text
    session_state     String?

    user User @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@unique([provider, providerAccountId])
}

model Session {
    id           String   @id @default(cuid())
    sessionToken String   @unique
    userId       String
    expires      DateTime
    user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
    id            String    @id @default(cuid())
    name          String?
    email         String?   @unique
    emailVerified DateTime?
    image         String?
    password      String? // @db.Text
    role          Role      @default(GUEST)
    hospitalId    Int?
    hospital      Hospital? @relation(fields: [hospitalId], references: [id])
    accounts      Account[]
    sessions      Session[]
}

model Hospital {
    id                 Int                   @id @default(autoincrement())
    hospitalName       String
    sendCases          Referral_case[]       @relation("send_cases")
    reciveCases        Referral_case[]       @relation("recive_cases")
    startCaseFrom      Referral_case[]       @relation("startCaseFrom")
    hospitalUser       User[]
    historyProcessList Hitory_process_list[]
}

model Hitory_process_list {
    id         Int      @id @default(autoincrement())
    hospitalId Int
    sender     Int      @default(0)
    recive     Int      @default(0)
    reject     Int      @default(0)
    accept     Int      @default(0)
    createAt   DateTime @default(now())
    hospital   Hospital @relation(fields: [hospitalId], references: [id])
}

model Referral_case {
    id               String            @id @default(cuid())
    patientId        Int
    status           Status
    senderHospital   Int
    startHospital    Int
    receiverHospital Int
    hospitalSend     Hospital          @relation("send_cases", fields: [senderHospital], references: [id])
    hospitalReceive  Hospital          @relation("recive_cases", fields: [receiverHospital], references: [id])
    medRecord        Med_record[]
    logCaseStatus    Log_case_status[]
    startCaseFrom    Hospital          @relation("startCaseFrom", fields: [startHospital], references: [id])
    patient          Patient_info      @relation(fields: [patientId], references: [id])
}

model Patient_info {
    id               Int             @id @default(autoincrement())
    refCases         Referral_case[]
    citizenId        String          @unique @db.Char(13)
    patientFirstname String          @db.VarChar(255)
    patientSurname   String          @db.VarChar(255)
    brithDate        DateTime        @db.Date
    gender           Gender
    bloodType        BloodType
    houseNumber      String?
    moo              String?
    subDistrict      String?
    subArea          String?
    province         String?
    postalCode       String?
}

model Med_record {
    id       String        @id @default(cuid())
    case     String
    date     DateTime
    doctor   String
    hospital String
    detail   String
    cases    Referral_case @relation(fields: [case], references: [id])
}

model Log_case_status {
    caseId     String
    statusTo   String
    statusFrom String
    changeAt   DateTime
    case       Referral_case @relation(fields: [caseId], references: [id])

    @@id([caseId, statusTo, statusFrom])
}

